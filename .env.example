# OpenAI API Key (required for chat functionality)
OPENAI_API_KEY=your_openai_key_here

# Admin key for monitoring endpoints
ADMIN_KEY=your_secure_admin_key_here

# SendGrid for email functionality (optional)
SENDGRID_API_KEY=your_sendgrid_key_here

# Google OAuth Configuration (ARCHIVED - uncomment to restore Google OAuth)
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GOOGLE_CALLBACK_URL=http://localhost:8080/api/auth/google/callback

# JWT Configuration (required for custom authentication)
JWT_SECRET=your_jwt_secret_here_minimum_64_chars_recommended
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_in_production_please_use_a_random_string

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Render API Key (optional for deployment)
RENDER_API_KEY=...

# Vercel API Token (optional for deployment)
VERCEL_API_TOKEN=...

# Environment
NODE_ENV=development

# Logging level
LOG_LEVEL=info

# Port
PORT=8080

# Stripe Configuration (for subscription payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Pricing Configuration
STRIPE_STARTER_PRICE_ID=price_starter_monthly_id
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly_id
STRIPE_PRO_PRICE_ID=price_pro_monthly_id
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly_id
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id
STRIPE_DEFAULT_PRICE_ID=price_pro_monthly_id

# Stripe Checkout URLs
STRIPE_SUCCESS_URL=http://localhost:5173/success
STRIPE_CANCEL_URL=http://localhost:5173/cancel
STRIPE_PORTAL_RETURN_URL=http://localhost:5173/account