# ===================================
# AutoDevelop.ai v2 - Environment Variables
# ===================================

# ===== REQUIRED FOR PRODUCTION =====

# OpenAI API Key (required for AI chat functionality)
OPENAI_API_KEY=sk-...

# Stripe Configuration (required for payments)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_DEFAULT_PRICE_ID=price_...

# Authentication Secrets (required)
JWT_SECRET=your-secure-jwt-secret-minimum-64-characters-recommended
SESSION_SECRET=your-secure-session-secret-change-in-production

# SendGrid Email Service (required for notifications)
SENDGRID_API_KEY=SG...

# ===== GOOGLE OAUTH (OPTIONAL) =====

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===== STRIPE PRICING (OPTIONAL) =====

# Stripe Pricing Tiers (if using multiple tiers)
STRIPE_STARTER_PRICE_ID=price_starter_monthly
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly
STRIPE_PRO_PRICE_ID=price_pro_monthly
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly

# ===== URLS & REDIRECTS =====

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://yourdomain.com

# Stripe Redirect URLs
STRIPE_SUCCESS_URL=https://yourdomain.com/success
STRIPE_CANCEL_URL=https://yourdomain.com/cancel
STRIPE_PORTAL_RETURN_URL=https://yourdomain.com/account

# ===== OPTIONAL CONFIGURATION =====

# Admin access
ADMIN_KEY=your-admin-secret

# Usage limits (defaults shown)
FREE_MESSAGE_LIMIT=5
FREE_MONTHLY_LIMIT=150

# Email configuration
FROM_EMAIL=noreply@yourdomain.com

# Session storage type (sqlite, memory, redis, mongo)
SESSION_STORE=sqlite

# Development/debugging
NODE_ENV=production

# Environment
NODE_ENV=development

# Logging level
LOG_LEVEL=info

# Port
PORT=8080

# Stripe Configuration (for subscription payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Pricing Configuration
STRIPE_STARTER_PRICE_ID=price_starter_monthly_id
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly_id
STRIPE_PRO_PRICE_ID=price_pro_monthly_id
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly_id
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id
STRIPE_DEFAULT_PRICE_ID=price_pro_monthly_id

# Stripe Checkout URLs
STRIPE_SUCCESS_URL=http://localhost:5173/success
STRIPE_CANCEL_URL=http://localhost:5173/cancel
STRIPE_PORTAL_RETURN_URL=http://localhost:5173/account